<!DOCUMENT html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title> My First Jquery Page with Carousel</title>
</head>

<body>
  <div id="book_panel">
    <a href="#" id="prev_btn">&laquo;</a>
    <a href="#" id="next_btn">&raquo;</a>
    <div id="carousel">
    </div>
  </div>

<script id="book_panel_template" type="text/template">
  {{#books}}
    <div class="book">
      <h3>{{name}}</h3>
      <h4>{{author}}</h4>
      <p>{{description}}</p>
    </div>
  {{/books}}
</script>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.cycle/3.03/jquery.cycle.all.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/2.1.3/mustache.min.js" type="text/javascript"></script>

<script type="text/javascript">

$(function() {
$.getJSON('books.json', function(data) {
    var template = $('#book_panel_template').html();
    var html = Mustache.to_html(template, data);
    $('#carousel').html(html);

    $('#carousel').cycle({
      fx: 'fade',
      pause: 1,
      next: '#next_btn',
      prev: '#prev_btn',
      speed: 500,
      timeout: 10000
    });
  });
});
</script>

</body>

</html>
